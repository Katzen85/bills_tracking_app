<h1>Update Details</h1>

<form action="/update_user" method="post">
  <input type="hidden" name="_method" value="patch">
  <div class="update-user-details-container">
    <input class="update-details-input" type="text" name="name" placeholder="<%= @user["name"] %>">
    <input class="update-details-input" type="email" name="email" placeholder="<%= @user["email"] %>">
    <button class="update-details-submit-btn">Submit</button>
  </div>
  
</form>